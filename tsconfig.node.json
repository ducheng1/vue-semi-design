{
  "compilerOptions": {
    "lib": ["DOM", "ES2022"],
    "useDefineForClassFields": true,

    /* modules */
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,

    /* type checking */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmit": false,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": ["rslib.config.ts", "tests"]
}
